<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post Details</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="post-detail">
        <h1><%= post.city %>, <%= post.country %></h1>
        <p>Start Date: <%= post.startDate %></p>
        <p>End Date: <%= post.endDate %></p>
        
        <h2>Reviews</h2>
        <% if (post.reviews.length > 0) { %>
            <ul>
                <% post.reviews.forEach(function(review) { %>
                    <li>
                        <p>Rating: <%= review.rating %>/5</p>
                        <p><%= review.content %></p>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>No reviews yet. Be the first to leave one!</p>
        <% } %>
        <form action="/posts/<%= post._id %>/reviews" method="POST">
            <textarea name="content" placeholder="Write your review here" required></textarea>
            <input type="number" name="rating" min="1" max="4" placeholder="Rating (1-5)" required>
            <button type="submit">Submit Review</button>
        </form>
    </div>
</body>
</html>
