<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post Details</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container post-container">
        <div class="post-detail">
            <h1 class="post-title"><%= post.city %>, <%= post.country %></h1>
            <p class="post-date">Start Date: <%= new Date(post.startDate).toLocaleDateString() %></p>
            <p class="post-date">End Date: <%= new Date(post.endDate).toLocaleDateString() %></p>

            <% if (post.photos && post.photos.length > 0) { %>
                <div class="media-container photos">
                    <% post.photos.forEach(photo => { %>
                        <img src="/<%= photo %>" alt="Photo for <%= post.city %>, <%= post.country %>" class="post-photo">
                    <% }) %>
                </div>
            <% } %>

            <% if (post.video) { %>
                <div class="media-container video">
                    <video controls class="post-video">
                        <source src="/<%= post.video %>" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                </div>
            <% } %>

            <!-- Reviews Section -->
            <div class="reviews-section">
                <h2 class="reviews-title">Reviews</h2>
                <% if (post.reviews && post.reviews.length > 0) { %>
                    <% post.reviews.forEach(function(review) { %>
                        <div class="review">
                            <% if (review.rating) { %>
                                <p class="review-rating">Rating: <%= review.rating %> / 4</p>
                            <% } %>
                            <p class="review-author"><%= review.author ? review.author : "Anonymous" %>:</p>
                            <p class="review-text">"<%= review.content %>"</p>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p class="no-reviews">No reviews yet. Be the first to review this post!</p>
                <% } %>

                <h2 class="add-review-title">Add a Review</h2>
                <form action="/posts/<%= post._id %>/reviews" method="POST" class="review-form">
                    <textarea name="content" rows="4" placeholder="Write your review here..." required class="review-textarea"></textarea>
                    <div class="rating-container">
                        <label for="rating">Rating:</label>
                        <input type="number" name="rating" id="rating" min="1" max="4" placeholder="Rating (1-4)" class="rating-input">
                    </div>
                    <button type="submit" class="button submit-review-button">Submit Review</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
